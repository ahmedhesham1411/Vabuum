<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ItemDetails"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="@drawable/backk"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="start"
            android:id="@+id/toolbar">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/go_back"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/cat"/>

        </androidx.appcompat.widget.Toolbar>

    </FrameLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_125sdp"
            android:layout_height="@dimen/_125sdp"
            app:cardCornerRadius="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_gravity="center"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_pic">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="@dimen/_125sdp"
                    android:layout_gravity="center"
                    android:id="@+id/imggg"
                    android:scaleType="fitXY"
                    android:background="@drawable/photoshape"
                    />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="Name"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:padding="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/txtname"
            android:text="name"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:padding="@dimen/_10sdp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="Price"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:padding="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/txtprice"
            android:text="price"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:padding="@dimen/_10sdp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="About"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:padding="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtdesc"
            android:text="desc"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:padding="@dimen/_10sdp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:scaleType="center"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_gradient"
                    android:id="@+id/increase"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_18ssp"
                    android:id="@+id/counter"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:scaleType="center"
                android:layout_gravity="center"
                android:src="@drawable/ic_remove_black_24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_gradient"
                android:id="@+id/decrease"/>



        </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_to_fav"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="wrap_content"
                    android:text="Add to wish list"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_gradient"
                    tools:ignore="RtlCompat"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableEnd="@drawable/ic_favorite_black_24dp"
                    android:paddingEnd="@dimen/_10sdp"/>

                <Space
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/add_to_cart"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="wrap_content"
                    android:text="Add to cart"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_gradient"
                    tools:ignore="RtlCompat"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableEnd="@drawable/ic_add_shopping_cart_black_24dp"
                    android:paddingEnd="@dimen/_10sdp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>